[push]
  default = current
[commit]
  gpgsign = true
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore_global
  filemode = false
  trustctime = false
[color]
  ui = true
[credential]
  helper = cache --timeout=604800
[mergetool]
  keepbackups = false
  keeptemporaries = false
  prompt = false
  trustexitcode = false
[alias]
  br = branch
  ci = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  gl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  last = log -1 --stat
  st = status -sb
  unstage = reset HEAD --
  ctags = !.git/hooks/ctags
  mkg = !mkgitignore -d
  log-graph = log --oneline --decorate --graph --all
  tag-delete = push --delete origin $1 && git tag -d $1
[gpg]
  program = /usr/bin/gpg
[init]
  templatedir = ~/.git-templates
