[push]
  default = current
[commit]
  gpgsign = true
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore_global
  filemode = false
  pager =
  trustctime = false
[color]
  ui = true
[credential]
  helper = cache --timeout=604800
[mergetool]
  keepbackups = false
  keeptemporaries = false
  prompt = false
  trustexitcode = false
[alias]
  a = add
  b = branch
  branches = branch -a
  bugrelease = "!sh -c 'git name-rev --tags --name-only  $(git log --grep ^$1: --pretty=\"format:%H\n\")' -"
  can = commit --gpg-sign --amend --no-edit
  co = checkout
  cob = checkout-new-branch
  ctags = !.git/hooks/ctags
  diffc = diff --cached
  findbug = "!sh -c 'git log --grep=^$1:' -"
  gl = config --global -l
  graph-log = log --oneline --decorate --graph --all
  l = !git log | head -n 30
  last = log -1 --stat
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lost = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Creset %f' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
  mkg = !mkgitignore -d
  remotes = remote -v
  rpo = remote prune origin
  sb = status -sb
  search = !git rev-list --all | xargs git grep -F
  stashes = stash list
  sync = sync-repo
  tag-delete = push --delete origin $1 && git tag -d $1
  tags = tag -l
  unstage = reset HEAD --
  unwip = !"git log -n 1 | grep -q -c WIP && git reset HEAD~1"
  wip = !git add -u && git commit -m "WIP"
[gpg]
  program = gpg
[init]
  defaultbranch = main
[user]
  email = sfeuga@member.fsf.org
  name = St√©phane FEUGA OSHIMA
  signingKey = FE68EE6758FACFAC
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[pull]
  rebase = true
[gist]
  private = yes
[fetch]
  prune = true
[advice]
  detachedHead = false
[pager]
  diff = bat -l diff --style='changes,grid,header,header-filesize'
  show = bat -l diff --style='changes,grid,header,header-filesize'
