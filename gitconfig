[push]
  default = current
[commit]
  gpgsign = true
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore_global
  filemode = false
  pager = less -R
  trustctime = false
[color]
  ui = true
[credential]
  helper = cache --timeout=604800
[mergetool]
  keepbackups = false
  keeptemporaries = false
  prompt = false
  trustexitcode = false
[alias]
  a = add
  b = branch
  branches = branch -a
  bugrelease = "!sh -c 'git name-rev --tags --name-only  $(git log --grep ^$1: --pretty=\"format:%H\n\")' -"
  c = commit
  ca = commit --amend
  can = commit --amend --no-edit
  cl = clone
  cm = commit -m
  co = checkout
  cob = checkout-new-branch
  cp = cherry-pick
  ctags = !.git/hooks/ctags
  d = diff
  dc = diff --cached
  f = pull
  findbug = "!sh -c 'git log --grep=^$1:' -"
  graph-log = log --oneline --decorate --graph --all
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  last = log -1 --stat
  lost = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Creset %f' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
  mkg = !mkgitignore -d
  p = push
  pf = push -f
  pom = push origin master
  remotes = remote -v
  rpo = remote prune origin
  s = status
  sb = status -sb
  stashes = stash list
  sync = sync-repo
  tag-delete = push --delete origin $1 && git tag -d $1
  tags = tag -l
  unstage = reset HEAD --
  unwip = !"git log -n 1 | grep -q -c wip && git reset HEAD~1"
  wip = !git add -u && git commit -m "WIP"
[gpg]
  program = gpg
[init]
  templatedir = ~/.git-templates
[user]
  email = sfeuga@member.fsf.org
  name = St√©phane FEUGA OSHIMA
  signingkey = D1C1F8F1DB785DF5
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
