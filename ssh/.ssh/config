Include $HOME/.colima/ssh_config

## Default
Host *
  ControlMaster auto
  ControlPersist 4h
  UseKeychain yes

Host gh
    # The host that has the remote Git repository
    Hostname github.com
    # Username for remote SSH user (For GitHub, everyone uses the name `git`)
    User git
    # Path to your private SSH key
    IdentityFile $HOME/.ssh/Mac-mini

Host gh-cartier
    # The host that has the remote Git repository
    Hostname github.com
    # Username for remote SSH user (For GitHub, everyone uses the name `git`)
    User git
    # Path to your private SSH key
    IdentityFile $HOME/.ssh/cartier_macMini_rsa

